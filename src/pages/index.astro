---
import { getImage } from "astro:assets";
import Icon from "../components/Icon.astro";
import heroShot from "../assets/app-hero.webp";
import shotAlt from "../assets/app-shot.webp";

const heroImg = await getImage({
  src: heroShot,
  width: 720,
  quality: "high",
});

const altImg = await getImage({
  src: shotAlt,
  width: 720,
  quality: "high",
});
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />
    <meta
      name="theme-color"
      content="#fbfaf7"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#070a12"
      media="(prefers-color-scheme: dark)"
    />

    <title>Certification Prep Pro — AWS practice exams for iOS</title>
    <meta
      name="description"
      content="Prepare for AWS certifications with full-length practice exams, quick quizzes, and progress tracking. Cloud Practitioner and Solutions Architect Associate question sets included."
    />

    <meta property="og:title" content="Certification Prep Pro" />
    <meta
      property="og:description"
      content="AWS practice exams, quick quizzes, and progress tracking for iOS."
    />
    <meta property="og:site_name" content="Certification Prep Pro" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />

    <link
      rel="icon"
      type="image/png"
      href="/assets/favicon.png"
      sizes="32x32"
    />

    <script is:inline>
      (() => {
        try {
          const stored = localStorage.getItem("theme");
          const prefersDark = window.matchMedia?.(
            "(prefers-color-scheme: dark)",
          )?.matches;
          const theme = stored || (prefersDark ? "dark" : "light");
          document.documentElement.dataset.theme = theme;
        } catch {
          document.documentElement.dataset.theme = "light";
        }
      })();
    </script>

    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <a class="skip" href="#main">Skip to content</a>

    <header class="site-header">
      <nav class="nav container" aria-label="Primary">
        <a class="brand" href="#">
          <img
            src="/assets/logo.png"
            width="28"
            height="28"
            alt=""
            aria-hidden="true"
          />
          <span class="brand-name">Certification Prep Pro</span>
        </a>

        <div class="nav-links">
          <a class="nav-link" href="#features">Features</a>
          <a class="nav-link" href="#screenshots">Screenshots</a>
          <a class="nav-link" href="#download">Download</a>
        </div>

        <div class="nav-actions">
          <button
            class="icon-button"
            id="themeToggle"
            type="button"
            aria-label="Toggle theme"
            aria-pressed="false"
          >
            <span class="icon" data-icon="sun" aria-hidden="true">
              <Icon name="sun" />
            </span>
            <span class="icon" data-icon="moon" aria-hidden="true">
              <Icon name="moon" />
            </span>
          </button>

          <a
            class="button button--primary"
            href="https://apps.apple.com/us/app/certification-prep-pro/id6741158449"
            target="_blank"
            rel="noreferrer"
          >
            Download
          </a>
        </div>
      </nav>
    </header>

    <main id="main">
      <section class="hero container">
        <div class="hero-copy">
          <p class="eyebrow">iOS app</p>
          <h1 class="headline">Practice AWS exams with confidence.</h1>
          <p class="lead">
            Full‑length practice exams, quick quizzes, and progress tracking for
            AWS Cloud Practitioner and Solutions Architect Associate.
          </p>

          <div class="cta-row">
            <a
              class="button button--primary"
              href="https://apps.apple.com/us/app/certification-prep-pro/id6741158449"
              target="_blank"
              rel="noreferrer"
            >
              Download on the App Store
            </a>
          </div>

          <ul class="hero-points" aria-label="Highlights">
            <li>Full exams: 65 questions • 40 minutes</li>
            <li>Quick quizzes: 20 questions • 12 minutes</li>
            <li>History, analytics, and a 75% pass mark indicator</li>
          </ul>
        </div>

        <div class="hero-media">
          <div class="shot shot--phone">
            <img
              class="shot-img"
              src={heroImg.src}
              width={heroImg.attributes.width}
              height={heroImg.attributes.height}
              alt="Certification Prep Pro on iPhone, showing the exam practice home screen."
              decoding="async"
              loading="eager"
            />
          </div>

          <div class="trust">
            <div class="trust-item">
              <div class="trust-kicker">Realistic</div>
              <div class="trust-text">Full exam timing and pass mark.</div>
            </div>
            <div class="trust-item">
              <div class="trust-kicker">Flexible</div>
              <div class="trust-text">Quick quizzes when you’re short on time.</div>
            </div>
            <div class="trust-item">
              <div class="trust-kicker">Trackable</div>
              <div class="trust-text">Review history and focus weak areas.</div>
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="section container">
        <div class="section-head">
          <h2>Everything you need to prep.</h2>
          <p class="section-lead">
            A focused study companion for AWS certifications—built around
            practice, timing, and feedback.
          </p>
        </div>

        <div class="grid">
          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="file-text" />
            </div>
            <h3>Large question pool</h3>
            <p>
              Hundreds of practice questions across Cloud Practitioner and
              Solutions Architect Associate.
            </p>
          </article>

          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="clock" />
            </div>
            <h3>Exam simulation</h3>
            <p>
              Practice with a 65‑question, 40‑minute timer to build pacing and
              confidence.
            </p>
          </article>

          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="list-checks" />
            </div>
            <h3>Quick quizzes</h3>
            <p>
              Short on time? Run 20‑question quizzes in 12 minutes and keep
              momentum.
            </p>
          </article>

          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="bar-chart-3" />
            </div>
            <h3>Progress tracking</h3>
            <p>
              Review historical results and monitor improvement over time.
            </p>
          </article>

          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="eye" />
            </div>
            <h3>Performance analysis</h3>
            <p>
              See what you missed, spot weak areas, and focus your next session.
            </p>
          </article>

          <article class="card">
            <div class="card-icon" aria-hidden="true">
              <Icon name="shield-check" />
            </div>
            <h3>Pass mark indicator</h3>
            <p>
              A clear 75% threshold helps you gauge readiness before exam day.
            </p>
          </article>
        </div>
      </section>

      <section id="screenshots" class="section container">
        <div class="section-head">
          <h2>Clean UI, built for practice.</h2>
          <p class="section-lead">
            Designed for repetition: pick an exam, start a quiz, and review your
            results.
          </p>
        </div>

        <div class="shot shot--phoneWide">
          <img
            class="shot-img"
            src={altImg.src}
            width={altImg.attributes.width}
            height={altImg.attributes.height}
            alt="Certification Prep Pro screenshot."
            decoding="async"
            loading="lazy"
          />
        </div>
      </section>

      <section id="download" class="section container">
        <div class="download card card--cta">
          <div>
            <h2>Ready to start studying?</h2>
            <p class="section-lead">
              Download Certification Prep Pro for iOS and prep for your next AWS
              certification with confidence.
            </p>
            <p class="legal">
              Note: This is an independent study tool and is not affiliated
              with, sponsored by, or endorsed by Amazon Web Services (AWS).
            </p>
          </div>
          <div class="cta-row">
            <a
              class="button button--primary"
              href="https://apps.apple.com/us/app/certification-prep-pro/id6741158449"
              target="_blank"
              rel="noreferrer"
            >
              Download
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container footer-inner">
        <div class="footer-left">
          <span class="footer-brand">Certification Prep Pro</span>
          <span class="footer-muted">© <span id="year"></span></span>
        </div>
        <div class="footer-right">
          <a
            class="footer-link"
            href="https://coffeedevs.com"
            target="_blank"
            rel="noreferrer"
          >
            coffeedevs.com
          </a>
        </div>
      </div>
    </footer>

    <script src="/script.js" defer></script>
  </body>
</html>
